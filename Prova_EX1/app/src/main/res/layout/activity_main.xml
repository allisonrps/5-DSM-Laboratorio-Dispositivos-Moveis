<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estrada2"
    android:backgroundTintMode="src_over"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="35dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:background="#FFFFFF"
        android:text="CALCULADORA DE COMBUSTÍVEL"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="#FFFFFF"
        android:hint="Tempo da viagem (horas)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editVelocidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="#FBFBFB"
        android:hint="Velocidade média (km/h)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#050101"
        android:backgroundTint="#FB0000"
        android:text="CALCULAR"
        app:iconPadding="10dp"
        app:iconTint="#FF0909" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#EDEBEB"
        android:text=""
        android:textSize="18sp" />
</LinearLayout>
